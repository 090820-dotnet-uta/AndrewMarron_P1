@model IEnumerable<RevatureP1.Models.OrderItemViewModel>
@*
    The user order history view page
*@
@{ ViewData["Title"] = "User History"; }
<div class="borderdiv">
    <h1>Order History for @ViewData["userName"]</h1>

    @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Name
                    @*@Html.DisplayNameFor(model => model.ProductName)*@
                </th>
                <th>
                    Number Ordered
                </th>
                <th>
                    Total Price
                </th>
                <th>
                    Ordered From
                </th>
                <th>
                    Ordered On
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderCount)
    </td>
    <td>
        $@Html.DisplayFor(modelItem => item.TotalPriceWhenOrdered)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LocationAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateOrdered)
    </td>
</tr>}
        </tbody>
    </table>
    @{ if (Model.Count() == 0)
        {
<h3>No Prior orders</h3> } }
    <a class="btn btn-primary" asp-area="" asp-action="Index">Main Menu</a>
</div>